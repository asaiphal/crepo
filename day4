printf("%s",colour[i]);
}
---------------------------------------------------------------------------------
 Writing a program using "ENUM" 
Sol:
#include<stdio.h>
enum state {a=2, b=5, c};
enum state d=7;

enum state find()
{
return d;
}

int main()
{
clrscr();
(find() ==(a+b))? printf("true"):printf("false");
return 0;
}
