----------------------------------------------------------------------------------------------------------------------------------------
 Using Recursion
Sol:
#include<stdio.h>

int main()
{
int x=0,i;
clrscr();
scanf("%d",&i);
x=factorial(i);
printf("\nFactorial of %d is %d",i,x);
return 0;
}

int factorial(int j)
{
  if ( j < 0 )
      return -1;
  if ( j == 0 )
     return 1;
  return (j * factorial(j-1));
}
